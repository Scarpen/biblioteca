<h1>Entrar</h1>
<% if current_user %>
<p> atualmente logado como: <%= current_user.login %> </p>
  <%= link_to log_out_path do %>
  <button class="btn"> Sair </button>
  <% end %>
<% else %>
	<%= form_tag sessions_path do %>
		<p>
			<%= label_tag :login %> <br>
			<%= text_field_tag :login, params[:login] %>
		</p>
		<p>
			<%= label_tag :senha %> <br>
			<%= password_field_tag :senha %>
		</p>
		<button type="submit" class="btn btn-primary" ><% submit_tag %> Entrar </p>
			<%end%>
		  <%= link_to sign_in do %>

 	 		<button class="btn"> Registrar </button>
  		  <% end %>
	
<%end%>
