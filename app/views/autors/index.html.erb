<h1>Listando bibliotecas</h1><br />
<div align="center">
<table border="1">
  <tr>
    <th width=40%>Nome</th>
    <th width=10>Telefone</th>
    <th width=10>Id do endereço</th>

  </tr>

<% @listbibli.each do |t| %>
  <tr>
    <td><%= t.nome%></td>
    <td><%= t.telefone%></td>
    <td><%= t.endbibli_id%></td>
    <td width=7%><%= link_to 'Mostrar', t %></td>
    <td width=7%><%= link_to 'Editar', edit_endbibli_path(t) %></td>
    <td width=7%><%= link_to 'Apagar', t, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<br />

<div class="btn-group">
  <%= link_to new_listbibli_path do %>
  <button class="btn">Nova Biblioteca</button>
  <% end %>
  <%= link_to endbiblis_path do%>
  <button class="btn">Lista Endereços</button>
  <% end %>
</div>