<h1>Listando Livros</h1><br />
<div align="center">
<table border="1">
  <tr>
    <th width=3%>Id</th>
    <th width=30%>Titulo</th>
    <th width=30%>Editora</th>
    <th width=10%>Pais</th>
    <th width=10%>Data</th>
  </tr>

<% @livro.each do |t| %>
  <tr>
    <td><%= t.id%></td>
    <td><%= t.titulo%></td>
    <td><%= t.editora%></td>
    <td><%= t.pais%></td>   
    <td><%= t.data%></td>
    <td><%= link_to 'Mostrar', t %></td>
    <td><%= link_to 'Editar', edit_livro_path(t) %></td>
    <td><%= link_to 'Apagar', t, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
  </tr>
<% end %>
</table>
</div>
<br />
<div class="btn-group">
  <%= link_to new_livro_path do%>
  <button class="btn">Novo Livro</button>
  <%end%>
  <%= link_to listbiblis_path do%>
  <button class="btn">Lista Bibliotecas</button>
  <%end%>
</div>


