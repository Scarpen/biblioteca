<!DOCTYPE html>
<html>
<head>
<title>Biblioteca Seila</title>
<%= stylesheet_link_tag    "application", :media => "all" %>
<%= javascript_include_tag "application" %>
<%= csrf_meta_tags %>
</head>
<body>
<header class="well	">
<h1><%= link_to "Bibliotecas", root_path %> </h1>
  <%= link_to root_path do %>
  <button class="btn">Home</button>
  <% end %>
  <%= link_to listbiblis_path do %>
  <button class="btn">Lista Bibliotecas</button>
  <% end %>
  <%= link_to new_listbibli_path do %>
  <button class="btn">Nova Biblioteca</button>
  <% end %>
  <%= link_to endbiblis_path do %>
  <button class="btn">Endereços</button>
  <% end %>
  <%= link_to new_endbibli_path do %>
  <button class="btn">Novo Endereço</button>
  <% end %>
</div>
</header>
<div id="content">
<% if notice.present? %>
<p id="notice"><%= notice %> </p>
<% end %>
<% if alert.present? %>
<p id="alert"><%= alert %> </p>
<% end %>
<%= yield %>
</div>

</body>
</html>
